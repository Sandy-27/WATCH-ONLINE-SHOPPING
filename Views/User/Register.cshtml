@model WatchOnlineShopping.Models.UsersLogin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
           background-color:whitesmoke;
        }

        table {
            border: none;
            border-collapse: collapse;
            margin-left: auto;
            margin-right: auto;
         background-color:lightgrey;
        }

            table th {
                background-color: white;
                color: blue;
                font-weight: bold;
                font-size: xx-large;
                background-color:lightgray;
            }

            table th, table td {
                padding: 20px;
                border: none;
            }

            table td {
                font-size: large;
            }

        .error {
            color: red;
            font-size: small
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {
        <br />
        <br />
        <br />
        <br />

        <table border="0" cellpadding="0" cellspacing="0" class="col-md-4">
            <tr>
                <th colspan="3">
                    Registration
                </th>
            </tr>
            <tr><td></td></tr>
            <tr>
                <td>
                    Username
                </td>
                <td>
                    @Html.TextBoxFor(m => m.UserName)
                </td>
                </tr>
            <tr>
                <td colspan="3">

                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "error" })
                </td>

            </tr>
            
            <tr>
                <td>
                    Password
                </td>
                <td>
                    @Html.PasswordFor(m => m.Password)
                </td>
                </tr>
            <tr>
                <td colspan="3">
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td>
                    Confirm Password
                </td>
                <td>
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </td>
                </tr>
            <tr>
                <td colspan="3">
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "error" })
                </td>
            </tr>
            <tr><td></td></tr>

            <tr>
                <td></td>

                <td>
                    <input style="background-color:aqua;font-size:larger" type="submit" value="Register" />
                </td>
                <td></td>
            </tr>
        </table>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                alert("@ViewBag.Message")
            });
        </script>
    }
</body>
</html>
